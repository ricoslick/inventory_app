<% provide(:title, "Edit Device User") %>
<% if signed_in? %>
	<div class="jumbotron jumbotron-fluid">	
		<h1>Edit Device User</h1>
		<p id="account">Update Device User Details</p>
	</div>

	<div class="row">
		<div class="col-sm-3"></div>
		<div class="col-sm-5">
			<ul class="list-group">
				<li class="list-group-item">
					<%= form_for(@customer) do |f| %> 
						<%= render 'shared/customer_errors' %>
						<%= render 'shared/customer_form', f: f %>
					<%= f.submit "Save Changes", class: "btn btn-large btn-primary" %>
					<% end %>
				</li>
			</ul>
		</div>
	</div>
<% end %>