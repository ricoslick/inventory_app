<% provide(:title, "Add User") %>
<% if signed_in? %>
	<div class="jumbotron jumbotron-fluid">	
		<h1>Add Device User</h1>
		<p id="account">Add a Device User here</p>
	</div>

	<div class="row">
		<div class="col-sm-3"></div>
		<div class="col-sm-5">
			<ul class="list-group">
				<li class="list-group-item">
					<%= form_for(@customer) do |f| %> 
					<div class="form-group">
						<%= render 'shared/customer_errors' %>
						<%= render 'shared/customer_form', f: f %>
					<%= f.submit "Submit", class: "btn btn-large btn-primary" %>
					</div>
					<% end %>
				</li>
			</ul>
		</div>
	</div>
<% else %>
	<div class="row">
		<div class="col-sm-3">
			<figure class="figure">
				<%= image_tag 'sad.gif' %>
				<figcaption class="figure-caption">&copy; Photo Bucket</figcaption>
			</figure>
		</div>
		<div class="col-sm-7">
			<div class="jumbotron jumbotron-fluid">	
					<h1>Saddened to inform you that:</h1>
					<p id="account">To view this you must login here: <%= link_to "Log in", signin_path, id:"signup" %></p>
			</div>
		</div>
	</div>	
<% end %>