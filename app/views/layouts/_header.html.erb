<div class="container-fluid sticky-top">
	<nav class="navbar navbar-toggleable-md bg-primary">
		<a class="navbar-brand" href="http://eapi.co.ke"><%= image_tag "EAPI_Logo_small.png" %></a>
		<%= link_to "inventory app", root_path, id:"logo" %>
			<ul class="nav nav-pills nav-justified pull-right">
				<li><%= link_to "Home", root_path, id:"home", class: "nav-item nav-link" %></li>
				<li><%= link_to "Help", help_path, class: "nav-item nav-link" %></li>
				<li><%= link_to "About", about_path, class: "nav-item nav-link" %></li>
				<%- if signed_in? %>
					<li><%= link_to "Users", users_path, class: "nav-item nav-link" %></li>
					<div class="dropdown">
						<a class="btn btn-primary dropdown-toggle nav-item" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-expanded="false">Account</a>
						<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
						<%= link_to "Profile", current_user, class: "dropdown-item" %>
						<%= link_to "Settings", edit_user_path(current_user), class: "dropdown-item" %>
						<%= link_to "Add Inventory", devices_path, class: "dropdown-item" %>
						<%= link_to "Sign out", signout_path, method: "delete", class: "nav-item nav-link" %></li>	
						</div>
					</div>
				<% else %>
					<li><%= link_to "Sign in", signin_path, class: "nav-item nav-link" %></li>
				<% end %>
				<li><%= link_to "Sign up",  signup_path, class: "btn btn btn-light" %></li>
			</ul>
	</nav>
</div>

